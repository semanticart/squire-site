{{ if .ShowErrors }}
  {{- $errorCount := len .Errors -}}
  <h2>
    {{ if eq .CustomError "" }}
      {{ if eq $errorCount 1 }}
        1 error issue found.
      {{ else }}
        {{ $errorCount }} issues found.
        {{ if eq $errorCount 0 }}
          Great job! üòÅ
        {{ end }}
      {{ end }}
    {{ else }}
      {{ .CustomError }}
    {{ end }}
  </h2>

  {{ if gt $errorCount 0 }}
    <table>
      <thead>
        <tr>
          <th class="number">Line</th>
          <th>Message</th>
        </tr>
      </thead>
      <tbody>
        {{ range .Errors }}
          <tr>
            <td class="number">{{ .Line }}</td>
            <td>{{ .Msg }}</td>
          </tr>
        {{ end }}
      </tbody>
    </table>
  {{ end }}
{{ end }}


